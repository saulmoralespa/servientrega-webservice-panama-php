{
    "name": "saulmoralespa/servientrega-webservice-panama-php",
    "description": "Web service Servientrega PHP for Panamá",
    "keywords": ["servientrega", "servientrega-php", "panamá"],
    "license": "MIT",
    "authors": [
        {
            "name": "Saul Morales Pacheco",
            "email": "info@saulmoraespa.com",
            "homepage": "https://saulmoralespa.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "require": {
		"php": ">=8.1",
        "ext-soap": "*",
        "ext-simplexml": "*",
        "econea/nusoap": "^0.9.17",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "vlucas/phpdotenv": "^5.6",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Saulmoralespa\\ServientregaPanama\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saulmoralespa\\ServientregaPanama\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs-check": "phpcs --colors -s",
        "phpcs-fix": "phpcbf --colors -s",
        "phpcs-auto-check-summary": "phpcs --report=summary -p",
        "phpcs-auto-fix-summary": "phpcbf --report=summary -p"
    }
}
